<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    cardCornerRadius="@dimen/card_corner_radius"
    cardElevation="@dimen/card_elevation"
    cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/cardview_margin"
    app:cardMaxElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/currentDayLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Today"
            android:textSize="@dimen/current_day_title_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/default_margin"
            android:layout_marginLeft="8dp"
            android:background="@color/forecast_card_divider" />

        <GridView
            android:id="@+id/hourlyForecastGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="4">

        </GridView>
    </LinearLayout>

</android.support.v7.widget.CardView>
